{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"]
    },
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*.spec.ts"]
}